<section>

    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <div class="mb-md-5 mt-md-4">

                            <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                            <form action="/su/login" method="post">
                                <p class="text-white-50">Please enter your password!</p>
                                {{#if loginErr}}
                                <p class="text" style="color:red">Password not matching !</p>
                                {{/if}}

                                <input type="text" name="_id" value="{{suData._id}}"
                                    style="visibility:hidden; height:0px" />

                                <input type="text" name="id" value="{{suData.id}}"
                                    style="visibility: hidden; height:0px" />


                                <div class="form-outline form-white mb-5">
                                    <input type="password" name="key" class="form-control form-control"
                                        placeholder="Password" />

                                </div>


                                <button class="btn btn-outline-light btn-lg px-5" type="submit">Login</button>

                            </form>
                        </div>



                    </div>
                </div>
            </div>

        </div>
    </div>
</section>